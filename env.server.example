# ============================================
# SERVER DEPLOYMENT .env CONFIGURATION
# ============================================
# Copy this file to .env on your server and update the values below

# JWT Configuration
# Generate a strong secret key for JWT token signing
# IMPORTANT: Generate a new secret for production!
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_64_CHARACTERS_LONG

# Database Configuration
# Path to SQLite database file (relative to backend directory)
DB_PATH=./backend/data/jail_visitation.sqlite

# Server Configuration
# Port for the backend server (keep as 3001 unless you change docker-compose.yml)
PORT=3001

# Environment
# Set to 'production' for production deployment
NODE_ENV=production

# CORS Configuration
# Frontend URL for CORS policy
# CHANGE THIS to your actual domain or server IP
# Examples:
#   - If using domain: FRONTEND_URL=https://yourdomain.com
#   - If using IP: FRONTEND_URL=http://123.45.67.89:3001
#   - If using Nginx reverse proxy: FRONTEND_URL=https://yourdomain.com
FRONTEND_URL=http://YOUR_SERVER_IP_OR_DOMAIN:3001

# React App API URL
# CHANGE THIS to match your FRONTEND_URL
# This tells the frontend where to find the backend API
# Examples:
#   - If using domain: REACT_APP_API_URL=https://yourdomain.com
#   - If using IP: REACT_APP_API_URL=http://123.45.67.89:3001
#   - If using Nginx reverse proxy: REACT_APP_API_URL=https://yourdomain.com
REACT_APP_API_URL=http://YOUR_SERVER_IP_OR_DOMAIN:3001

# Telegram Bot Configuration
# Bot token from @BotFather (for password reset functionality)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# Telegram Bot Username (without @) - used in frontend to display bot info
# This is passed as a build argument during Docker build
REACT_APP_TELEGRAM_BOT_USERNAME=BJMPnoreplybot

# Optional: Database backup settings
# BACKUP_INTERVAL=24
# BACKUP_RETENTION_DAYS=30

